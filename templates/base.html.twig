      {% endif %}
      
    </ul>
   
  </div>
</nav>
    <div class="container">
        <h1 class= "border border-dark rounded text-white m-2 p-2 text-center bg-info">{% block monTitre %}{% endblock %}</h1>
        {% block body %}{% endblock %}
    </div>
